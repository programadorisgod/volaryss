---
import type { SvgComponent } from "astro/types";

interface Props {
    title: string;
    subscription?: string;
    icon: SvgComponent & ImageMetadata;
}

const { title, subscription, icon } = Astro.props;
import { Image } from "astro:assets";
---

<article class="volaryss-card">
    <header class="volaryss-card__header">
        <Image src={icon} alt="Card icon" class="volaryss-card__icon" />
        <h3 class="volaryss-card__title">{title}</h3>
    </header>
    <main class="volaryss-card__main">
        <p class="volaryss-card__description">{subscription}</p>
    </main>
</article>

<style>
    .volaryss-card {
        border: 1px solid var(--border-color);
        max-width: 30rem;
        padding: 1rem;

        border-radius: 1rem;
        background: #fff;
        color: var(--color-black);

        transition:
            transform 0.2s ease-in-out,
            box-shadow 0.2s ease-in-out;

        .volaryss-card__icon {
            background: var(--primary-blue);
            border-radius: 1rem;
            padding: 0.7rem;
        }

        .volaryss-card__title {
            font-weight: 600;
        }

        &:hover {
            transform: scale(1.01);
            box-shadow: 0 2px 10px 0 rgba(60, 60, 60, 0.15);
        }

        transform: translateX(-60px);
        /** Scroll animation */
        animation-name: slideInLeft;
        animation-duration: 1.2s;
        animation-fill-mode: both;
        animation-timing-function: ease-in-out;
        animation-timeline: view();
        animation-range: entry 0% cover 40%;
    }

    @keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-60px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
</style>
