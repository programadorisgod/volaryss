---
import folderIcon from "../assets/folder.svg";
import { Image } from "astro:assets";
---

<header class="landing-header">
    <div class="landing-header__inner">
        <div class="landing-header__brand">
            <div class="landing-header__icon">
                <Image src={folderIcon} alt="Volaryss icon" loading="lazy" />
            </div>
            <span class="landing-header__title">Volaryss</span>
        </div>
        <nav class="landing-header__nav">
            <ul class="landing-header__nav-list">
                <li class="landing-header__nav-item">
                    <a href="#features">Características</a>
                </li>
                <li class="landing-header__nav-item">
                    <a href="#conversion">Conversión de archivos</a>
                </li>
            </ul>
        </nav>
        <div class="landing-header__options">
            <button class="landing-header__button"> iniciar </button>
        </div>
    </div>
</header>

<style>
    .landing-header {
        border-bottom: 1px solid var(--border-color);
    }

    .landing-header__inner {
        max-width: 1200px;
        margin: 0 auto;
        padding-inline: 1rem;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #fff;
        padding: 0.2rem 0;
        font-family: "Roboto Variable", system-ui;

        .landing-header__brand {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
            font-weight: 800;
            font-size: 1.5rem;
            color: var(--color-black);

            .landing-header__icon {
                background: var(--primary);
                border-radius: 12px;
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 3px;

                img {
                    width: 32px;
                    height: 32px;
                }
            }
        }

        .landing-header__nav-list {
            display: flex;
            justify-content: center;
            align-items: center;
            list-style: none;
            gap: 1.5rem;
            padding: 0;
            .landing-header__nav-item {
                cursor: pointer;
                color: var(--text);
                transition: color 0.3s ease;

                &:hover {
                    color: var(--color-black);
                }

                & a {
                    text-decoration: none;

                    &:visited {
                        color: inherit;
                    }
                }
            }
        }
        .landing-header__button {
            background: var(--primary);
            border: none;
            padding: var(--padding-button);
            border-radius: var(--border-rd-bt);
            cursor: pointer;
            color: #fff;
            font-weight: 600;
            font-size: 13px;
            transition: background 0.3s ease;

            &:hover {
                background: var(--hover-button);
            }
        }
    }

    @media (width <= 480px) {
        .landing-header {
            padding: 0.5rem;
        }

        .landing-header__nav,
        .landing-header__options {
            display: none;
        }
    }
</style>
